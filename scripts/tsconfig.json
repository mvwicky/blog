{
  "compilerOptions": {
    "outDir": "../build",
    "lib": ["es2020"],
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "..",
    "types": ["debug", "node"],
    "noEmit": false,
    "declarationDir": "../build",
    "incremental": true,
    "preserveWatchOutput": true,
    "strict": true,
    "composite": true,
    "rootDir": ".."
  },
  "files": ["../package.json"],
  "include": ["*.ts"],
  "extends": "../config/tsconfig.base.json",
  "references": [{ "path": "../lib/tsconfig.json" }]
}
