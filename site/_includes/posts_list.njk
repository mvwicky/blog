<div class="w-full max-w-md hidden" id="tag-select-container">
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="md:text-right md:mb-0" for="post-tags">Select a Category</label>
    </div>
    <div class="md:w-1/3">
      <select class="post-tags" name="post-tags" id="post-tags">
        <option value="0" label="all" selected>All</option>
      </select>
    </div>
  </div>
</div>

<div class="grid-posts-list px-2 text-lg leading-normal mt-3 pt-3 row-gap-2 col-gap-3" id="posts-list">
{% for post in collections.post | reverse -%}
  {% if env.unpublished or post.data.published %}
    <span class="posts-list-bullet" data-post="{{ loop.index0 }}">â€¢</span>
    <span class="posts-list-date" data-post="{{ loop.index0 }}">{{ post.date | readableDate }}</span>
    <span class="posts-list-sep" data-post="{{ loop.index0 }}">&raquo;</span>
    <a
      class="posts-list-title text-indigo-700"
      href="{{ post.url | url }}"
      title="{{ post.data.description }}"
      data-post="{{ loop.index0 }}"
      data-tags="{{ post.data.tags | join(' ') }}"
    >
      {{ post.data.title }}
    </a>{% endif %}
{% endfor %}
</div>
