<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="{% webpackAsset 'styles.css' %}" />
    <title>{{ title }}</title>

    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker
          .register("/assets/sw.js")
          .then((reg) => {
            console.log(`Registered service worker with scope "${reg.scope}".`);
          })
          .catch((error) => {
            console.log(`Registration failed with error ${error}`);
          });
      }
    </script>
  </head>
  <body>
    <div class="container pt-2">
      <div class="flex justify-center bg-gray-200 px-4 py-3 rounded">
        <h1 class="font-semibold">
          <a class="never-underline" href="{{ '/' | url }}">Where Was I Going With That?</a>
        </h1>
      </div>
      <nav class="leading-4 text-lg" id="nav-main">
        <a class="header-link font-medium pr-6 text-2xl" href="{{ '/' | url }}">
          Home
        </a>
        <a href="{{ '/reading/' | url }}" class="header-link">
          Reading
        </a>
        <a href="{{ '/aboutme/' | url }}" class="header-link">
          About Me
        </a>
        <a
          href="https://github.com/mvwicky"
          class="header-link boxed-header-link ml-auto"
        >
          Github
        </a>
      </nav>
    </div>
    <div class="container">
      <div class="bg-blue-100 bg-opacity-75 py-6 border border-gray-600 min-h-screen">
        {{ content | safe }}
      </div>
    </div>
    <div class="container pb-4">
      <footer class="bg-gray-200 pt-3 pb-1 rounded-b border border-t-0 border-gray-600 flex flex-col font-thin">
        <div class="flex justify-center w-100 pb-3">
          {# <a class="header-link mx-5 text-sm font-thin" href="/">Prev</a> #}
          <a class="mt-5 mx-5 text-base lg:inline-block lg:mt-0" href="{{ '/' | url }}">Home</a>
          {# <a class="header-link mx-5 text-sm font-thin" href="/">Next</a> #}
        </div>

        <div class="flex justify-center w-100 border-t border-gray-500 pt-1">
          <span class="mx-5 text-xs lg:inline-block lg:mt-0 tracking-tight">&copy; Michael Van Wickle</span>
          {# <span class="mt-4 mx-5 text-sm font-thin lg:inline-block lg:mt-0">{{ pkg.version }}</span> #}
        </div>
      </footer>
    </div>
    <script type="module" src="{% webpackAsset 'main.js' %}"></script>
  </body>
</html>
