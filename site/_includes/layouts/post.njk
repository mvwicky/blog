{% extends "./default.njk" %}
{% from "macro_utils.njk" import footerlink %}

{% block content %}
  <header class="post-header">
    <h1>{{ title }}</h1>
    <h3>{{ page.date | readableDate }}</h3>

    <!-- <small>{{ tags }}</small> -->
  </header>
  <article class="content">
    {{ content  | safe }}
  </article>
{% endblock %}

{%- block footerprev -%}
  {%- set prevPage = collections.published | getPreviousCollectionItem(page) -%}
  {%- if prevPage -%}
    <a href="{{ prevPage.url }}" class="footer-link" title="{{ prevPage.data.description }}">Previous</a>
  {% else %}
    <span class="footer-link invisible"></span>
  {%- endif -%}
{%- endblock -%}

{%- block footernext -%}
  {%- set nextPage = collections.published | getNextCollectionItem(page) -%}
  {%- if nextPage -%}
    <a href="{{ nextPage.url }}" class="footer-link" title="{{ nextPage.data.description }}">Next</a>
  {% else %}
    <span class="footer-link invisible"></span>
  {%- endif -%}
{%- endblock -%}