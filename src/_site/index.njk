<div class="pl-4">
  <h3>All Posts</h3>

  <div class="w-full max-w-md" id="tag-select-container">
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <label class="md:text-right md:mb-0" for="post-tags">Select a Category</label>
      </div>
      <div class="md:w-1/3">
        <select class="post-tags" name="post-tags" id="post-tags">
          <option value="0" label="all" selected>All</option>
        </select>
      </div>
    </div>

  </div>

  <ul class="posts-list list-disc list-inside pl-2">
    {% for post in collections.post %}
    <li class="p-1 text-sm">
      <a class="text-lg hover:bg-gray-200 p-1 -m-1 rounded" href="{{ post.url }}">
        <span class="mr-1">{{ post.date | readableDate }}</span>
        <span>&nbsp;</span>
        <span class="text-indigo-700 hover:underline">{{ post.data.title }}</span>
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
