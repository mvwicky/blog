{
  "name": "blog",
  "version": "0.2.0",
  "description": "A Blog",
  "repository": "https://github.com/mvwicky/blog.git",
  "license": "MIT",
  "author": "Michael Van Wickle <mvanwickle@gmail.com>",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all clean build:assets build:site",
    "build:assets": "webpack --config webpack.prod.ts -p",
    "build:site": "eleventy",
    "clean": "trash ./dist",
    "dev": "cross-env NODE_ENV=development npm-run-all clean webpack:assets --parallel dev:*",
    "dev:assets": "yarn run webpack:assets --watch",
    "dev:serve": "eleventy --serve",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint --cache --cache-location .cache/.eslintcache '**/*.ts' 'site/**/*.js' '*.js'",
    "lint:styles": "stylelint --cache --cache-location .cache/.stylelintcache 'src/css/**/*.css'",
    "webpack:assets": "webpack --mode=development",
    "esb": "ts-node config/build.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && pretty-quick --staged"
    }
  },
  "config": {
    "eleventy": {
      "dir": {
        "input": "site",
        "includes": "_includes",
        "output": "dist",
        "data": "_data"
      },
      "dataTemplateEngine": "njk",
      "htmlTemplateEngine": "njk",
      "markdownTemplateEngine": "njk",
      "passthroughFileCopy": true,
      "templateFormats": [
        "md",
        "njk",
        "html"
      ]
    },
    "entrypoints": {
      "main": "src/ts/main.ts",
      "styles": "src/css/style.css"
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/luxon": "^1.24.0",
    "@types/markdown-it": "^10.0.1",
    "@types/markdown-it-anchor": "^4.0.4",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/terser-webpack-plugin": "^3.0.0",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@types/workbox-webpack-plugin": "^5.1.1",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "cache-loader": "^4.1.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "css-loader": "^4.0.0",
    "cssnano": "^4.1.10",
    "esbuild": "^0.6.2",
    "eslint": "^7.3.1",
    "eslint-config-wherewasigoing": "file:local_modules/eslint-config-wherewasigoing",
    "file-loader": "^6.0.0",
    "husky": "^4.2.5",
    "js-yaml": "^3.13.1",
    "luxon": "^1.24.1",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-attrs": "^3.0.2",
    "markdown-it-footnote": "^3.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "tailwindcss": "^1.4.4",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "engines": {
    "node": ">=12",
    "yarn": "^1.22"
  }
}
