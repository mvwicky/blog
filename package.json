{
  "name": "blog",
  "version": "0.6.0",
  "description": "A Blog",
  "repository": "https://github.com/mvwicky/blog.git",
  "license": "MIT",
  "author": "Michael Van Wickle <mvanwickle@gmail.com>",
  "scripts": {
    "assets:build": "ts-node scripts/build-assets.ts",
    "assets:watch": "ts-node scripts/watch-assets.ts",
    "build": "npm-run-all clean build:lib build:assets build:site build:sw",
    "build:assets": "cross-env NODE_ENV=production webpack --config=./webpack.prod.ts",
    "build:lib": "cross-env NODE_ENV=production tsc --project lib",
    "build:site": "cross-env NODE_ENV=production eleventy",
    "build:sw": "cross-env NODE_ENV=production ts-node scripts/build-sw.ts",
    "clean": "trash ./dist",
    "clean:lib": "trash ./build/lib",
    "clean:site": "trash ./dist",
    "compile": "npm-run-all clean:lib build:lib",
    "dev": "cross-env NODE_ENV=development npm-run-all clean webpack:assets build:lib --parallel dev:*",
    "dev:assets": "yarn run webpack:assets --watch",
    "dev:serve": "eleventy --serve",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint --format=pretty --cache --cache-location=.cache/.eslintcache '**/*.ts' '**/*.js'",
    "lint:styles": "stylelint --cache --cache-location .cache/.stylelintcache '**/*.css'",
    "watch:lib": "tsc --project lib --watch",
    "webpack:assets": "webpack --config=./webpack.config.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && pretty-quick --staged"
    }
  },
  "config": {
    "assets": {
      "output": "assets"
    },
    "eleventy": {
      "dir": {
        "input": "site",
        "includes": "_includes",
        "output": "dist",
        "data": "_data"
      },
      "dataTemplateEngine": "njk",
      "htmlTemplateEngine": "njk",
      "markdownTemplateEngine": "njk",
      "passthroughFileCopy": true,
      "templateFormats": [
        "md",
        "njk",
        "html",
        "11ty.js"
      ]
    },
    "entrypoints": {
      "main": "src/ts/main.ts",
      "styles": "src/css/style.css"
    }
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.0.2",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.2",
    "@types/luxon": "^1.24.0",
    "@types/markdown-it": "^10.0.1",
    "@types/markdown-it-anchor": "^4.0.4",
    "@types/mini-css-extract-plugin": "^1.0.0",
    "@types/terser-webpack-plugin": "^5.0.0",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@types/workbox-build": "^5.0.0",
    "autoprefixer": "^10.0.0",
    "babel-loader": "^8.1.0",
    "core-js": "^3.6.5",
    "critical": "^2.0.4",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.3.1",
    "eslint-config-wherewasigoing": "^0.0.7",
    "eslint-import-resolver-webpack": "^0.13.0",
    "file-loader": "^6.0.0",
    "find-up": "^5.0.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "js-yaml": "^3.13.1",
    "luxon": "^1.24.1",
    "markdown-it": "^12.0.0",
    "markdown-it-anchor": "^6.0.0",
    "markdown-it-attrs": "^3.0.2",
    "markdown-it-footnote": "^3.0.2",
    "mem": "^8.0.0",
    "mini-css-extract-plugin": "^1.0.0",
    "multimatch": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.0.6",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.0",
    "stylelint": "^13.3.3",
    "stylelint-config-mvwicky": "^0.0.5",
    "tailwindcss": "^1.4.4",
    "tippy.js": "^6.2.5",
    "trash-cli": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.9",
    "workbox-build": "^5.1.3"
  },
  "engines": {
    "node": ">=12",
    "yarn": "^1.22"
  }
}
