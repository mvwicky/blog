{
  "name": "blog",
  "version": "0.0.1",
  "description": "A Blog",
  "repository": "https://github.com/mvwicky/blog.git",
  "license": "MIT",
  "author": "Michael Van Wickle <mvanwickle@gmail.com>",
  "scripts": {
    "build": "npm-run-all clean build:assets build:site",
    "build:assets": "NODE_ENV=production webpack --mode=production",
    "build:dev": "npm-run-all clean webpack:assets build:site-dev",
    "build:site": "NODE_ENV=production eleventy",
    "build:site-dev": "NODE_ENV=development eleventy",
    "clean": "trash ./dist",
    "dev": "npm-run-all clean webpack:assets --parallel dev:*",
    "dev:assets": "yarn run webpack:assets --watch",
    "dev:site": "NODE_ENV=development eleventy --serve",
    "webpack:assets": "NODE_ENV=development webpack --mode=development"
  },
  "prettier": {
    "arrowParens": "always",
    "tabWidth": 2,
    "overrides": [
      {
        "files": [
          "*.njk"
        ],
        "options": {
          "parser": "html"
        }
      }
    ]
  },
  "eslintIgnore": [
    "tailwind.config.js",
    "postcss.config.js"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "file-loader": "^6.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "tailwindcss": "^1.4.4",
    "trash-cli": "^3.0.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "entrypoints": {
    "main": "./src/ts/main.ts",
    "styles": "./src/css/style.css"
  }
}
