{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "../build"
  },
  "exclude": ["../node_modueles/**/*"]
}
