{
  "compilerOptions": {
    "target": "es2018",
    "module": "ES2020",
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules", "**/.*/"]
}
