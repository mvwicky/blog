{
  "compilerOptions": {
    "outDir": "../build/lib",
    "lib": ["es2020", "dom"],
    "checkJs": false,
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": "..",
    "types": ["debug", "node"],
    "noEmit": false,
    "declaration": true,
    "declarationDir": "../build/lib",
    "incremental": true,
    "preserveWatchOutput": true,
    "strict": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules/**", "./build/"],
  "extends": "../config/tsconfig.base.json"
}
