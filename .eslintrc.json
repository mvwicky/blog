{
  "extends": "wherewasigoing",
  "rules": {
    "no-unused-vars": 0,
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true,
        "memberSyntaxSortOrder": ["none", "all", "single", "multiple"]
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": { "order": "asc" },
        "groups": [
          "builtin",
          "external",
          "internal",
          ["sibling", "parent"],
          "unknown",
          "index"
        ],
        "newlines-between": "always"
      }
    ]
  },
  "env": { "browser": true, "es6": true },
  "settings": {
    "import/cache": { "lifetime": 60 },
    "import/core-modules": ["os", "path", "process", "fs", "util"],
    "import/extensions": [".js", ".ts"],
    "import/external-module-folders": ["node_modules"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "webpack": { "config": { "resolve": { "extensions": [".ts"] } } },
      "typescript": {
        "alwaysTryTypes": true,
        "directory": ["tsconfig.json", "src/ts/tsconfig.json"]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "tailwind.config.js",
        "postcss.config.js",
        ".eleventy.js",
        "src/**/*.js"
      ],
      "env": { "node": true, "es6": true, "browser": false },
      "parser": "espree"
    },
    {
      "files": [
        "webpack.*.ts",
        "config/*.ts",
        "config/**/*.js",
        "site/_data/*.js"
      ],
      "env": { "node": true }
    }
  ],
  "root": true
}
