{
  "extends": "wherewasigoing",
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": { "order": "asc" },
        "groups": [
          "builtin",
          "external",
          "internal",
          ["sibling", "parent"],
          "unknown",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "import/dynamic-import-chunkname": [
      2,
      { "importFunctions": ["import"], "webpackChunknameFormat": "[a-z0-9-]+" }
    ],
    "no-unused-vars": "off"
  },
  "env": { "browser": true, "es6": true },
  "settings": {
    "import/cache": { "lifetime": 60 },
    "import/core-modules": ["os", "path", "process", "fs", "util", "crypto"],
    "import/extensions": [".js", ".ts"],
    "import/external-module-folders": ["node_modules"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/resolver": {
      "webpack": { "config": "./webpack.config.ts" },
      "typescript": {
        "alwaysTryTypes": true,
        "project": ["tsconfig.json", "src/ts/tsconfig.json"]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "tailwind.config.js",
        "postcss.config.js",
        ".eleventy.js",
        "src/**/*.js"
      ],
      "env": { "node": true, "browser": false }
    },
    {
      "files": [
        "webpack.*.ts",
        "config/**/*.ts",
        "config/**/*.js",
        "lib/**/*.ts",
        "site/**/*.js"
      ],
      "env": { "node": true, "browser": false },
      "rules": {
        "import/dynamic-import-chunkname": ["off", {}]
      }
    },
    {
      "files": ["src/js/sw.js"],
      "env": { "browser": false, "serviceworker": true, "node": false }
    }
  ],
  "root": true
}
